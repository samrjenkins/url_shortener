<%= render "ui/card" do %>
  <p>
    <span>Full URL:</span>
    <span><%= shortened_url.url %></span>
  </p>
  <p data-controller="clipboard">
    <span>Short URL:</span>
    <span data-clipboard-target="clip"><%= short_url(shortened_url) %></span>
    <%= tag.button "copy",
                   class: "bg-indigo-500 hover:bg-indigo-600 rounded-xl px-1 text-xs pb-0.5 cursor-pointer",
                   data: {
                     toggle_text: "copied!",
                     clipboard_target: "trigger",
                     action: "clipboard#copy"
                   } %>
  </p>
  <p>
    <span>Use count:</span>
    <span><%= shortened_url.use_count %></span>
  </p>

  <div class="flex justify-center">
    <%= link_to "Destroy", shortened_url_path(shortened_url.id), method: :delete, class: "bg-indigo-500 hover:bg-indigo-600 rounded-xl px-6 py-2 cursor-pointer" %>
  </div>
<% end %>
